
@model IEnumerable<Facturation.Models.Abonnement>

<div class="container" p-3>

    <a class="btn btn-primary btn-lg" asp-controller="Abonnement" asp-action="Create">Ajouter</a>
    <br />
    <br />
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">N°</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom(s)</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">CNI</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Puissance</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nom</td>
                    <td>@item.Prenom</td>
                    <td>@item.Adresse</td>
                    <td>@item.Cni</td>
                    <td>@item.Categories.Libelle</td>
                    <td>@item.Puissances.Libelle</td>
                    
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Abonnement" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Modifier</a>
                            <a asp-controller="Abonnement" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">effacer</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table> }
    else
    {
        <p>Pas d'abonné enregistrer</p>
    }


</div>