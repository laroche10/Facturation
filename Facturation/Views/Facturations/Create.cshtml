@model Facturation.Models.ViewModels.FacturationsVM

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3 ">Ajouter un abonné</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">

                    <div class="col-6">
                        <label asp-for="Facturations.Numero_facture"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Facturations.Montant_hors_taxe"></label>
                    </div>
                   
                </div>

                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Facturations.Numero_facture" class="form-control" />
                    </div>
                    <div class="col-6">
                        <input asp-for="Facturations.Montant_hors_taxe" class="form-control" />
                    </div>
                  

                </div>
                <div class="form-group row">

                    <div class="col-4">
                        <label asp-for="Facturations.Montant_ttc"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Abonnement.Categories"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Abonnement.Puissances"></label>
                    </div>
                </div>

                <div class="form-group row">

                    <div class="col-4">
                        <input asp-for="Abonnement.Cni" class="form-control" />
                    </div>
                    <div class="col-4">
                        <select asp-for="Abonnement.CategorieId" asp-items="@Model.TypeDropDown" class="form-control">
                            <option selected>---selectionner une categorie</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <select asp-for="Abonnement.PuissanceId" asp-items="@Model.TypeDropDowns" class="form-control">
                            <option selected>---selectionner une Puissance</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Ajouter" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Annuler</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>