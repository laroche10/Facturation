@model Facturation.Models.Categorie

<form method="post" asp-action="Create">
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Ajouter une categorie</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                   
                    <div class="col-12">
                        <label asp-for="Libelle"></label>
                    </div>
                </div>
                <div class="form-group row">
                    
                    <div class="col-12">
                        <input asp-for="Libelle" class="form-control" />
                        <span asp-validation-for="Libelle"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Ajouter" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Retour</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>