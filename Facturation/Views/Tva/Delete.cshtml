
@model Facturation.Models.Tva

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Effacer Tva</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Annee"></label>
                    </div>

                    <div class="col-6">
                        <label asp-for="Valeur"></label>
                    </div>

                </div>


          
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Annee" disabled class="form-control" />
                    </div>
                    <div class="col-6">
                        <input asp-for="Valeur" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Effacer" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Annuler</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}